<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.margonari.tdp2_frontend">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".activities.CourselandApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id_luis" />

        <activity android:name=".activities.LogInActivity" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- enable the search dialog to send searches to SearchableActivity -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".activities.SearchableActivity" />

        <activity android:name=".activities.SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activities.RestLoginActivity"
            android:label="@string/rest_login_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.RestListCategoriesActivity" />

        <!--
     ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".activities.CoursesActivity" />
        <activity android:name=".activities.CourseChooseActivity" />
        <activity
            android:name=".activities.MyCoursesActivity"
            android:label="@string/title_activity_my_courses_bis"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>