<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cv_course_professor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/border"
        >
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:id="@+id/layout_photo_professor">

            <com.pkmmte.view.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/professor_photo"
                android:src="@drawable/profile_pic"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:paddingBottom="@dimen/nav_header_vertical_spacing"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:border="true"
                app:border_color="@color/accent"
                app:border_width="4dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/professor_name"
            android:layout_toRightOf="@+id/layout_photo_professor"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/professor_type"
            android:layout_toRightOf="@+id/layout_photo_professor"
            android:layout_below="@+id/professor_name"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>