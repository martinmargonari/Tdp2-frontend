<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.pkmmte.view.CircularImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/professor_photo"
        android:layout_alignParentStart="true"
        android:src="@drawable/profile_pic"
        android:elevation="3dp"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:border="true"
        app:border_color="@color/accent"
        app:border_width="4dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/professor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/professor_photo"
            android:padding="10dp"
            android:textAppearance="@style/TextHead"
            app:typeface="roboto_medium" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/professor_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/professor_photo"
            android:layout_below="@+id/professor_name"
            android:padding="10dp"
            android:textAppearance="@style/TextBody"
            app:typeface="roboto_regular" />
</RelativeLayout>