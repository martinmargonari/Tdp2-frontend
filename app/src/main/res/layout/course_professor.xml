<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_course_professor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/border"
        >
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:id="@+id/layout_photo_professor">

            <ImageView
                android:id="@+id/professor_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/professor_name"
            android:layout_toRightOf="@+id/layout_photo_professor"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/professor_type"
            android:layout_toRightOf="@+id/layout_photo_professor"
            android:layout_below="@+id/professor_name"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>