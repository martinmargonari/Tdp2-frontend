<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/week_number"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"
        android:textAlignment="center" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/cv_my_course_unit"
        card_view:cardElevation="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:id="@+id/layout_photo_unit_course">

                <ImageView
                    android:id="@+id/unit_course_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/unit_course_name"
                android:layout_toRightOf="@+id/layout_photo_unit"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:gravity="center"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/cv_course_unit_limit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="#fafafa">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/week_limit_label"
                android:layout_alignParentTop="true"
                android:text="Fecha límite para evaluación: "
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/week_limit"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/week_limit_label"
                android:gravity="center"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>